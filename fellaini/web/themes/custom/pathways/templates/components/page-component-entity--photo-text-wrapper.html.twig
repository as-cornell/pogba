{#

/* -------------------------

Title: Photo Text Block
Descr: Set main wrapper for photo text item
        passess wrapperClass and content to photo-text-block.twig

--------------------------- */

#}
{% set group_modifiers = ['photoText'] %}

{% set items = content.field_photo_text_reference %}
{% set items_length = items|length %}

{% if content.field_photo_text_wrapper_class %}
  {% set wrapperClass = content.field_photo_text_wrapper_class[0]['#markup'] %}
  {% set group_modifiers = group_modifiers|merge([wrapperClass]) %}
{% endif %}


{% if items.1 %}
	{% set multiple = true %}
{% endif %}

{% embed "@organisms/grouping/_grouping.twig" with{
  items: items,
  title: content.name
} %}{% endembed %}



