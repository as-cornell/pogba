{#
/**
 * Available variables:
 * - video_base_class - the base classname
 * - video_modifiers - array of modifiers to add to the base classname
 *   by default, videos are expected to be 16x9, include the modifier "full" to support a 4x3 video
 * - video_blockname - blockname prepended to the base classname
 * - video_content - the content of the video (typically an iframe)
 *   the "|raw" filter is applied so that the iframe is rendered instead
 *   of simply passing the iframe as plain text.
 *
 * Available blocks:
 * - video_content - used to replace the content of the video with something other than the typical iframe
 *   for example: to insert an html5 video component
 */
#}
{% set video_figure_base_class = video_figure_base_class | default('figure') %}
{% set video_figure_blockname = video_figure_blockname | default('') %}
{% set video_figure_modifiers = video_figure_modifiers | default(['video']) %}

{% set video_base_class = video_base_class | default('video') %}

{% set alignment = field_component_alignment %}

{# set default to figures.video from data.yaml #}
{% if pl %}
    {% set video_content = figures.video.embed %}
    {% set video_caption = figures.video.caption %}
{% endif %}

<figure {{ bem(video_figure_base_class, (video_figure_modifiers), video_figure_blockname, alignment) }}>
    {% block video_content %}
        <div {{ bem(video_base_class, (video_modifiers), video_blockname) }}>
            {{ video_content|raw }}
        </div>

    {% endblock %}
    <figcaption>paiosdpaiosdfj
        {{video_caption}}
    </figcaption>
</figure>