{% set base_class = 'photoText' %}


{% embed "@molecules/content/photo-text/photo-text.twig" with {
    text: content.field_formatted_text,
    img_src : img.uri | image_style('6_4_large'),
    img_alt : img.alt,
    img_caption : img.caption,
    img_credit : img.credit,
    modifiers: modifiers
}%}{% endembed %}
