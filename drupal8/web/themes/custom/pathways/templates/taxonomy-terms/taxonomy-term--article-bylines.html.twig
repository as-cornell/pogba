{% set main_element_extra_classes = ['main'] %}
{% set main_element_base_class = 'basicSidebar' %}
{% set main_element_modifiers = ['viewContainer'] %}

{% set view_term_name = term.name.value %}
{% set view_title = 'Articles from ' ~ (view_term_name) %}
{% set view_content = drupal_view('article_blocks', 'block_bylines', term.id) %}

{% include "@organisms/view-list/_view-list.twig" with {
  view_title : view_title,
  view_content : view_content
}%}
